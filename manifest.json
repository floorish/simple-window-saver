{
  "name": "Simple Window Saver Sync",
  "version": "2.0",
  "description": "Save and restore windows.",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Simple Window Saver Sync",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "storage.js",
      "eventHandlers.js",
      "badge.js",
      "background.js",
      "debug.js"
    ]
  },
  "permissions": [
    "tabs",
	"storage"
  ],
  "key":"simplewindowsaverkey"
}
